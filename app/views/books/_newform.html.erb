<%= form_for(book) do |f| %>
	<div class="field row">
		<%= f.label :title %>
		<%= f.text_field :title, class: "col-xs-12 book_title" %>
	</div>

	<div class="field row">
		<%= f.label :body %> <!-- ここを変更 -->
		<%= f.text_area :body, class: "col-xs-12 book_body" %>
	</div>


	<div class="field row">
	<label>
		<%= f.label :タグ付け %>


		<%= f.radio_button :title, "genre" %>

	</label>
	</div>


	<div class="actions row">
		<%= f.submit class: "btn btn-primary col-xs-12" ,data: {disable_with: "送信中..." } %>
	</div>
<% end %>